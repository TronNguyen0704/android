<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonCustom" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_bgr</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/vagrundschriftbq</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/transparent</item>
        <item name="itemBackground">@drawable/navigation_bg</item>
        <item name="itemIconTint">@drawable/navigation_color</item>
        <item name="itemTextColor">@drawable/navigation_color</item>
    </style>
</resources>
